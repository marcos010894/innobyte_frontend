import React, { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import LicensesTable from '../components/users/LicensesTable';
import FiltersSection from '../components/users/FiltersSection';
import { getUsuarios, deleteUsuario, bloquearUsuario, desbloquearUsuario } from '../services';
import type { UsuarioListItem, UsuariosFilters } from '../types/api.types';

const UsersManagement: React.FC = () => {
  const navigate = useNavigate();
  const [showFilters, setShowFilters] = useState(false);
  const [usuarios, setUsuarios] = useState<UsuarioListItem[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [filters, setFilters] = useState<UsuariosFilters>({
    page: 1,
    limit: 10,
  });
  const [pagination, setPagination] = useState({
    total: 0,
    page: 1,
    limit: 10,
    total_pages: 0,
  });
  const [summary, setSummary] = useState({
    vencidas_hoje: 0,
    vencendo_3_dias: 0,
    vencendo_7_dias: 0,
    bloqueadas: 0,
    ativas: 0,
    total_licencas: 0,
  });

  useEffect(() => {
    loadUsuarios();
  }, [filters]);

  const loadUsuarios = async () => {
    setLoading(true);
    setError('');
    
    const result = await getUsuarios(filters);
    
    if (result.success && result.data) {
      setUsuarios(result.data.data);
      setPagination(result.data.pagination);
      if (result.data.summary) {
        setSummary(result.data.summary);
      }
    } else {
      setError(result.message || 'Erro ao carregar usuários');
    }
    
    setLoading(false);
  };

  const handleFilterChange = (newFilters: Partial<UsuariosFilters>) => {
    setFilters({ ...filters, ...newFilters, page: 1 });
  };

  const handlePageChange = (newPage: number) => {
    setFilters({ ...filters, page: newPage });
  };

  const handleDelete = async (id: number, cliente: string) => {
    if (!confirm(`Tem certeza que deseja excluir o usuário "${cliente}"?`)) {
      return;
    }

    const result = await deleteUsuario(id);
    
    if (result.success) {
      alert('Usuário excluído com sucesso!');
      loadUsuarios();
    } else {
      alert(result.message);
    }
  };

  const handleToggleBlock = async (id: number, bloqueada: boolean, cliente: string) => {
    const action = bloqueada ? 'desbloquear' : 'bloquear';
    
    if (!confirm(`Tem certeza que deseja ${action} o usuário "${cliente}"?`)) {
      return;
    }

    const result = bloqueada 
      ? await desbloquearUsuario(id)
      : await bloquearUsuario(id);
    
    if (result.success) {
      alert(`Usuário ${bloqueada ? 'desbloqueado' : 'bloqueado'} com sucesso!`);
      loadUsuarios();
    } else {
      alert(result.message);
    }
  };

  const handleNewLicense = () => {
    navigate('/users/new');
  };

  const handleEditLicense = (id: number) => {
    navigate(`/users/edit/${id}`);
  };

  return (
    <div>
      {/* Page Header */}
      <div className="mb-6 flex justify-between items-start">
        <div>
          <h1 className="text-2xl font-bold text-gray-800">Gerenciamento de Usuários e Licenças</h1>
          <p className="text-gray-600">Gerencie licenças, clientes e permissões do sistema</p>
        </div>
        <div className="flex gap-3">
          <button
            onClick={() => setShowFilters(true)}
            className="px-6 py-3 bg-primary text-white rounded-md hover:bg-blue-600 transition-colors flex items-center gap-2 shadow-md"
          >
            <i className="fas fa-filter"></i>
            Filtros
          </button>
          <button
            onClick={handleNewLicense}
            className="px-6 py-3 bg-success text-white rounded-md hover:bg-green-600 transition-colors flex items-center gap-2 shadow-md"
          >
            <i className="fas fa-plus"></i>
            Novo Usuário
          </button>
        </div>
      </div>

      {/* Summary Cards */}
      <div className="mb-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        {/* Card Vencidas */}
        <div className="bg-red-50 border border-red-200 rounded-lg p-4">
          <div className="flex items-start gap-3">
            <i className="fas fa-exclamation-triangle text-red-500 text-xl mt-0.5"></i>
            <div>
              <h3 className="font-semibold text-red-800 mb-2">Atenção: Licenças Vencidas</h3>
              <div className="text-sm text-red-700 space-y-1">
                <p><strong>Vencidas hoje:</strong> {summary.vencidas_hoje}</p>
                <p><strong>Vencendo em 3 dias:</strong> {summary.vencendo_3_dias}</p>
                <p><strong>Vencendo em 7 dias:</strong> {summary.vencendo_7_dias}</p>
              </div>
            </div>
          </div>
        </div>

        {/* Card Bloqueadas */}
        <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div className="flex items-start gap-3">
            <i className="fas fa-ban text-yellow-600 text-xl mt-0.5"></i>
            <div>
              <h3 className="font-semibold text-yellow-800 mb-2">Licenças Bloqueadas</h3>
              <div className="text-sm text-yellow-700">
                <p className="text-2xl font-bold">{summary.bloqueadas}</p>
                <p className="text-xs">licenças bloqueadas</p>
              </div>
            </div>
          </div>
        </div>

        {/* Card Ativas */}
        <div className="bg-green-50 border border-green-200 rounded-lg p-4">
          <div className="flex items-start gap-3">
            <i className="fas fa-check-circle text-green-600 text-xl mt-0.5"></i>
            <div>
              <h3 className="font-semibold text-green-800 mb-2">Licenças Ativas</h3>
              <div className="text-sm text-green-700">
                <p className="text-2xl font-bold">{summary.ativas}</p>
                <p className="text-xs">de {summary.total_licencas} total</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Error Message */}
      {error && (
        <div className="mb-6 bg-red-50 border border-red-200 rounded-lg p-4 flex items-center gap-3">
          <i className="fas fa-exclamation-circle text-red-500 text-xl"></i>
          <p className="text-red-700">{error}</p>
        </div>
      )}

      {/* Loading State */}
      {loading ? (
        <div className="flex justify-center items-center py-12">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
        </div>
      ) : (
        <>
          {/* Licenses Table */}
          <LicensesTable 
            usuarios={usuarios}
            onEdit={handleEditLicense}
            onDelete={handleDelete}
            onToggleBlock={handleToggleBlock}
          />

          {/* Pagination */}
          {pagination.total_pages > 1 && (
            <div className="mt-6 flex justify-between items-center">
              <div className="text-sm text-gray-600">
                Mostrando {usuarios.length} de {pagination.total} usuários
              </div>
              <div className="flex gap-2">
                <button
                  onClick={() => handlePageChange(pagination.page - 1)}
                  disabled={pagination.page === 1}
                  className="px-4 py-2 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <i className="fas fa-chevron-left mr-2"></i>
                  Anterior
                </button>
                <div className="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-md">
                  Página {pagination.page} de {pagination.total_pages}
                </div>
                <button
                  onClick={() => handlePageChange(pagination.page + 1)}
                  disabled={pagination.page === pagination.total_pages}
                  className="px-4 py-2 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  Próxima
                  <i className="fas fa-chevron-right ml-2"></i>
                </button>
              </div>
            </div>
          )}
        </>
      )}

      {/* Filters Sidebar */}
      {/* Filters Sidebar */}
      {showFilters && (
        <>
          {/* Backdrop with blur */}
          <div 
            className="fixed inset-0 bg-black/30 backdrop-blur-sm z-40 animate-fadeIn"
            onClick={() => setShowFilters(false)}
          ></div>
          
          {/* Sidebar */}
          <div className="fixed top-0 right-0 h-full w-full sm:w-[500px] bg-white shadow-2xl z-50 overflow-y-auto animate-slideInRight">
            <div className="p-6">
              <div className="flex justify-between items-center mb-6">
                <h2 className="text-xl font-bold text-gray-800 flex items-center gap-2">
                  <i className="fas fa-filter text-primary"></i>
                  Filtros Avançados
                </h2>
                <button
                  onClick={() => setShowFilters(false)}
                  className="text-gray-500 hover:text-gray-700 transition-colors p-2 hover:bg-gray-100 rounded-full"
                >
                  <i className="fas fa-times text-xl"></i>
                </button>
              </div>
              
              <FiltersSection 
                onClose={() => setShowFilters(false)} 
                onFilter={handleFilterChange}
                currentFilters={filters}
              />
            </div>
          </div>
        </>
      )}
    </div>
  );
};

export default UsersManagement;
